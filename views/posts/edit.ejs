<%- include ../partials/header%>
        <div class="edit">
            <form class="field" action="/posts/<%= post._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="post[title]" id="title" value="<%= post.title %>">
                </div>
                <div class="form-group">
                    <textarea class="form-control" name="post[body]" id="t-a" cols="30" rows="15"><%= post.body %></textarea>
                </div>
                <input class="btn btn-success" type="submit" value="Save changes" >
            </form>
        </div>
<%- include ../partials/footer %>